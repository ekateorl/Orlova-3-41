                                                <TextBlock  Text="{Binding CountCostString}"></TextBlock>
                                                <TextBlock Text="руб." Margin="7,0,0,0"></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Отработанные часы">
                        <Grid>
